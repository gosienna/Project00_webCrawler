{
  "manifest_version": 3,
  "name": "XPath Web Crawler",
  "version": "1.0",
  "description": "A simple extension to crawl web content using XPath.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "images/pickaxe_16x16.png",
      "48": "images/pickaxe_48x48.png",
      "128": "images/pickaxe_128x128.png"
    }
  },
  "icons": {
    "16": "images/pickaxe_16x16.png",
    "48": "images/pickaxe_48x48.png",
    "128": "images/pickaxe_128x128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["panel.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "panel.css", "popup.js", "popup.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
